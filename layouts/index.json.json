[ {{- $i := 0 -}}
  {{- range where .Site.RegularPages "Section" "ne" "" -}}
     {{- if not .Params.noSearch -}}
        {{- if gt $i 0 }},{{ end -}}
        {"uri":"{{ .RelPermalink }}", "title":{{ .Title | jsonify  }}, "synonyms": "{{ with .Params.Synonyms }}{{ delimit . ", " }}{{ end }}", "content":{{ .Plain | htmlUnescape | jsonify }}, "tags": "{{ delimit .Params.tags ", " }}", "section": {{ .Section | jsonify -}}, "annees": "{{ .Params.annees }}", "sources": "{{ delimit .Params.sources ", " }}" }
        {{- $i = add $i 1 -}}
     {{- end -}}
  {{- end -}} ]
